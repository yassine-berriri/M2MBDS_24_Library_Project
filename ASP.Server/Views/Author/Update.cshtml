@using ASP.Server.Controllers
@using ASP.Server.ViewModels
@model UpdateAuthorViewModel
@{
    ViewData["Title"] = "Edit a Author";
}
<style>
    .input-group {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    input, textarea, select {
        flex-basis: 85%;
    }

    label {
        flex-basis: 10%;
    }
</style>

<form class="form fv-plugins-bootstrap5 fv-plugins-framework" asp-controller="Author" asp-action="Update">
    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="FullName"></label>
        <input class="form-control form-control-solid" asp-for="FullName" />
    </div>
    <span asp-validation-for="FullName" class="text-danger"></span>

    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="Email"></label>
        <textarea class="form-control form-control-solid" asp-for="Email"></textarea>
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>

    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="Birthday"></label>
        <input class="form-control form-control-solid" asp-for="Birthday" />
    </div>
    <span asp-validation-for="Birthday" class="text-danger"></span>

    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="Bio"></label>
        <input class="form-control form-control-solid" asp-for="Bio" />
    </div>
    <span asp-validation-for="Bio" class="text-danger"></span>

    <!-- Add more fields as needed -->

 
    <span asp-validation-for="SelectedBooks" class="text-danger"></span>
    <div class="input-group">
        <label class="required fs-6 fw-bold mb-2" asp-for="SelectedBooks"></label>
        <select class="form-select form-select-solid" data-control="select2" data-placeholder="Select an option" asp-for="SelectedBooks" multiple>
            <option value="">Select Book</option>
            @foreach (var book in Model.AllBooks)
            {
                @if (@ViewBag.myBooks.Contains(book.Id))
                {
                    <option value="@book.Id" selected>
                        @book.Name
                    </option>
                }
                else
                {
                    <option value="@book.Id">
                        @book.Name
                    </option>
                }
            }
        </select>
    </div>
    <span asp-validation-for="SelectedBooks" class="text-danger"></span>

    <input class="save btn btn-primary" type="submit" value="Edit" style="width: 100%; margin-top: 50px" />
</form>