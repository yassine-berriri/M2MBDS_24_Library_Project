@using ASP.Server.Controllers
@using ASP.Server.ViewModels
@model CreateAuthorViewModel
@{
    ViewData["Title"] = "Add a Author";
}
<style>
    .input-group {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    input, textarea, select {
        flex-basis: 85%;
    }

    label {
        flex-basis: 10%;
    }
</style>

<br />
<form class="form fv-plugins-bootstrap5 fv-plugins-framework" asp-controller="Author" asp-action="Create">
    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="FullName"></label>
        <input class="form-control form-control-solid" asp-for="FullName" />
    </div>
    <span asp-validation-for="FullName" class="text-danger"></span>

    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="Email"></label>
        <textarea class="form-control form-control-solid" asp-for="Email"></textarea>
    </div>
    <span asp-validation-for="Email" class="text-danger"></span>

    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="Birthday"></label>
        <input class="form-control form-control-solid" asp-for="Birthday" />
    </div>
    <span asp-validation-for="Birthday" class="text-danger"></span>

    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="Bio"></label>
        <input class="form-control form-control-solid" asp-for="Bio" />
    </div>
    <span asp-validation-for="Bio" class="text-danger"></span>

    <!-- Add more fields as needed -->

    <div class="input-group">
        <label class="required fs-6 fw-bold mb-2" asp-for="Books"></label>
        <select class="form-select form-select-solid" data-control="select2" data-placeholder="Select an option" asp-for="Books" asp-items="@(new SelectList(Model.AllBooks, "Id", "Name"))" multiple>
            <option value="">Select Book</option>
        </select>
    </div>
    <span asp-validation-for="Books" class="text-danger"></span>

    <input class="save btn btn-primary" type="submit" value="Add" style="width: 100%; margin-top: 50px" />
</form>