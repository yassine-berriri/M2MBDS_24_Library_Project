@using ASP.Server.Controllers
@using ASP.Server.ViewModels
@model CreateBookApiViewModel
@{
    ViewData["Title"] = "Add a book";
}

<style>
    .input-group {
        margin-top: 10px;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    input, textarea, select {
        flex-basis: 85%;
    }

    label {
        flex-basis: 10%;
    }
</style>

<br />
<br />
<!--begin::Alert-->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger" role="alert">
        <strong>Error:</strong> There were some problems with your submission.
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<!--end::Alert-->
<form class="form fv-plugins-bootstrap5 fv-plugins-framework" asp-controller="Book" asp-action="CreateFromApi">

    <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="ISBN"></label>
        <input class="form-control form-control-solid" asp-for="ISBN" />
    </div>
    <span asp-validation-for="ISBN" class="text-danger"></span>
        <div class="fv-row mb-7 fv-plugins-icon-container">
        <label class="required fs-6 fw-bold mb-2" asp-for="Content"></label>
        <textarea class="form-control form-control-solid" asp-for="Content"></textarea>
    </div>
    <span asp-validation-for="Content" class="text-danger"></span>
    <input class="save btn btn-primary" type="submit" value="Add" style="width: 100%; margin-top: 50px" />
</form>
